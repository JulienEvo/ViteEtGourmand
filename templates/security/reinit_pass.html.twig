{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% if fromUser == 1 %}
        {% set option = 'readonly' %}
    {% else %}
        {% set option = 'required autofocus' %}
    {% endif %}

    <section class="hero-section mb-3">
        <div class="hero-content">
            <h1>Réinitialiser le mot de passe</h1>
            <p>Plats faits maison – Événementiel – Commande en ligne</p>
            <a href="{{ path('login') }}">
                <button type="button" class="btn btn-primary" title="Se connecter">Se connecter</button>
            </a>
        </div>
    </section>

    <div class="container d-flex justify-content-center mt-3 mb-3">
        <div class="row w-100 justify-content-center">
            <div class="col-12 col-sm-10 col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body p-4">

                        <form method="post" action="{{ path('reinit_pass', {fromUser: fromUser}) }}">
                            <div class="mb-3 col-12 ">
                                <label for="email" class="form-label">Email du compte</label>
                                <input type="email" class="form-control" id="email" name="email" value="{{ user.email ?? last_username }}"
                                       {{ option }}>
                            </div>

                            {% if fromUser == 1 %}
                                <div class="mb-3 col-12">
                                    <label for="password" class="form-label">Mot de passe</label>
                                    <input type="password" class="form-control" name="password" id="password" value="" placeholder="" required autofocus>
                                </div>
                                <div class="mb-3 col-12">
                                    <label for="confirm" class="form-label">Confirmer le mot de passe</label>
                                    <input type="password" class="form-control" name="confirm" id="confirm" value="" placeholder="" required>
                                </div>
                            {% endif %}

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    Réinitialiser le mot de passe
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
