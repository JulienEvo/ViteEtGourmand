{% extends 'admin/layout.html.twig' %}

{% block title %}V&G : Édition d'un avis{% endblock %}

{% block body %}

    {% if avis %}
        {% set titre = "Modifier l'avis" %}
        {% set action_path = path('admin_avis_edit', {id: avis.id}) %}
    {% else %}
        {% set titre = 'Ajouter un avis' %}
        {% set action_path = path('admin_avis_edit', {id: 0}) %}
    {% endif %}


    <h1>{{ titre }}</h1>

    <form method="post" id="form_avis" action="{{ action_path }}">

        <div class="card mb-3">
            <div class="card-header">
                <h4>Informations générales</h4>
            </div>
            <div class="card-body">
                <div class="row col-12">

                    <div class="mb-3 col-12 col-lg-3">
                        <label for="utilisateur_id" class="form-label">Utilisateur :</label>
                        <select class="form-select" name="utilisateur_id" id="utilisateur_id" required>
                            <option value="">Choix</option>
                            {% for utilisateur in tabUtilisateur %}
                                <option value="{{ utilisateur.getId() }}" {% if (utilisateur.getId() == (avis.getUtilisateurId() ?? 0)) %}selected{% endif %}>
                                    {{ utilisateur.nom ~ ' ' ~ utilisateur.prenom }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="mb-3 col-12 col-lg-2">
                        <label for="commande_id" class="form-label">Commande :</label>
                        <select class="form-select" name="commande_id" id="commande_id" required>
                            <option value="">Choix</option>
                            {% for commande in tabCommande %}
                                <option value="{{ commande.id }}" {% if (commande.id == (avis.getCommandeId() ?? 0)) %}selected{% endif %}>
                                    {{ commande.numero }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="mb-3 col-12 col-lg-2">
                        <label for="note" class="form-label">Note :</label>
                        <select class="form-select" name="note" id="note" required>
                            <option value="1" {% if avis.note ?? 0 == 1 %}selected{% endif %}>1 étoile</option>
                            <option value="2" {% if avis.note ?? 0 == 2 %}selected{% endif %}>2 étoiles</option>
                            <option value="3" {% if avis.note ?? 0 == 3 %}selected{% endif %}>3 étoiles</option>
                            <option value="4" {% if avis.note ?? 0 == 4 %}selected{% endif %}>4 étoiles</option>
                            <option value="5" {% if avis.note ?? 5 == 5 %}selected{% endif %}>5 étoiles</option>
                        </select>
                    </div>
                    <div class="mb-3 col-12 col-lg-3">
                        <label for="commentaire" class="form-label">Commentaire :</label>
                        <textarea class="form-control" rows="2" name="commentaire" id="commentaire" required>{{ avis.commentaire ?? '' }}</textarea>
                    </div>
                    <div class="mb-3 col-12 col-lg-2">
                        <label for="valide" class="form-label">État :</label>
                        <select class="form-select" name="valide" id="valide" required>
                            <option value="" {% if avis.valide ?? '' == '' %}selected{% endif %}>En attente</option>
                            <option value="1" {% if avis.valide ?? '' == 1 %}selected{% endif %}>Validé</option>
                            <option value="0" {% if avis.valide ?? '' == 0 %}selected{% endif %}>Refusé</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('admin_avis_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left-square"></i>&nbsp;Retour
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-floppy-fill"></i>&nbsp;Enregistrer
            </button>
        </div>
    </form>
{% endblock %}

