{% extends 'admin/layout.html.twig' %}

{% block title %}V&G : Commande{% endblock %}

{% block body %}

    {% set user = app.getUser() %}

    <h1>Commande N°{{ commande.numero }}</h1>

    <div class="card mb-3">
        <div class="card-header">
            <h4>Informations générales</h4>
        </div>
        <div class="card-body">
            <div class="row col-12">
                <div class="mb-3 col-12 col-lg-2">
                    <label for="menu_id" class="form-label">Menu :</label>
                    <p>{{ menu.libelle }}</p>
                </div>

                <div class="mb-3 col-12 col-lg-2">
                    <label for="commande_etat_id" class="form-label">État :</label>
                    <p style="background-color: {{ tabCommande_etat[commande.commande_etat_id].couleur }}">{{ tabCommande_etat[commande.commande_etat_id].libelle }}</p>
                </div>
                <div class="mb-3 col-12 col-lg-2">
                    <label for="date_livraison" class="form-label">Date de commande :</label>
                    <p>{{ commande.created_at|date('d/m/Y') }}</p>
                </div>
                <div class="mb-3 col-12 col-lg-2">
                    <label for="date_livraison" class="form-label">Date de livraison :</label>
                    <p>{{ commande.date|date('d/m/Y') }}</p>
                </div>
                <div class="mb-3 col-12 col-lg-4">
                    <label for="date_livraison" class="form-label">Adresse de livraison :</label>
                    <p>{{ user.adresse }}<br>{{ user.code_postal ~ ' - ' ~ user.commune }}</p>
                </div>
            </div>

            <div class="row col-12">
                <div class="mb-3 col-12 col-lg-2">
                    <label for="remise" class="form-label">Prix unitaire :</label>
                    <p>{{ menu.tarif_unitaire|number_format(2, '.', ' ') }} €</p>
                </div>
                <div class="mb-3 col-12 col-lg-2">
                    <label for="remise" class="form-label">Quantité :</label>
                    <p>{{ commande.quantite }}</p>
                </div>
                <div class="mb-3 col-12 col-lg-2">
                    <label for="remise" class="form-label">Total TTC hors fdl :</label>
                    <p>{{ commande.total_ttc }} €</p>
                </div>
                <div class="mb-3 col-12 col-lg-2">
                    <label for="remise" class="form-label">Remise :</label>
                    <p>{{ commande.remise }} %</p>
                </div>
                <div class="mb-3 col-12 col-lg-2">
                    <label for="tarif_livraison" class="form-label">Tarif livraison <br><span class="small fw-normal">({{ distance_km }} km)</span> :</label>
                    <p>{{ tarif_livraison }} €</p>
                </div>
                <div class="mb-3 col-12 col-lg-2">
                    <label for="remise" class="form-label">Total TTC :</label>
                    <p>{{ commande.total_ttc + tarif_livraison }} €</p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('admin_commande_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left-square"></i>&nbsp;Retour
        </a>
    </div>

    <script src="{{ asset('js/image.js') }}"></script>
{% endblock %}

