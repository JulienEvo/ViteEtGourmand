{% extends 'base.html.twig' %}

{% block title %}V&G : Contact{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    {% set user = app.getUser() %}

    <section class="hero-section mb-3">
        <div class="hero-content">
            <h1>Contact</h1>
            <p>Plats faits maison – Événementiel – Commande en ligne</p>
            {% if user %}
                <a href="{{ path('admin_utilisateur_profil') }}">
                    <button type="button" class="btn btn-primary" title="Voir mes commandes">Voir mon profil</button>
                </a>
            {% else %}
                <a href="{{ path('login', {redirect: app.request.requestUri}) }}">
                    <button type="button" class="btn btn-primary" title="Se connecter">Se connecter</button>
                </a>
            {% endif %}
        </div>
    </section>

    <div class="row justify-content-center">
        <div class="col-12 col-md-11">
            <form method="post" action="{{ path('admin_societe_contact') }}">
                <div class="card mb-3">
                    <div class="card-header">
                        <h4>Envoyer un message</h4>
                    </div>
                    <div class="card-body">
                        <div class="row col-12">
                            <div class="mb-3 col-12 col-lg-4">
                                <label for="email" class="form-label">E-mail</label>
                                <input type="email" class="form-control" name="email" id="email" value="{{ user.email ?? '' }}" required>
                            </div>
                            <div class="mb-3 col-12 col-lg-4">
                                <label for="titre" class="form-label">Titre</label>
                                <input type="text" class="form-control" name="titre" id="titre" value="" placeholder="ex: Demande d'informations" required>
                            </div>
                            <div class="mb-3 col-12 col-lg-4">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" rows="5" name="message" id="message" placeholder="Écrivez votre message..." required></textarea>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('home') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-square"></i>&nbsp;Retour
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-airplane"></i>&nbsp;Envoyer
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
