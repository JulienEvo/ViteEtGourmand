{% extends 'admin/layout.html.twig' %}

{% block title %}V&G : liste des menus{% endblock %}

{% block body %}
    <h1 class="mb-4">
        <i class="bi bi-people-fill"></i>&nbsp;Menus
    </h1>

    <a href="{{ path('admin_employe_edit', {id: 0}) }}" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i>&nbsp;Ajouter un menu
    </a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>thème</th>
            <th>Min personne</th>
            <th>Tarif / Personne</th>
            <th>Regime</th>
            <th>Quantité</th>
            <th>Actif</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% if tabMenu|length > 0 %}
            {% for menu in tabMenu %}
                <tr>
                    <td>{{ menu.titre }}</td>
                    <td>{{ menu.description }}</td>
                    <td>{{ menu.theme }}</td>
                    <td>{{ menu.min_personne }}</td>
                    <td>{{ menu.tarif_personne }}</td>
                    <td>{{ menu.regime }}</td>
                    <td>{{ menu.quantite }}</td>
                    <td>{{ (menu.actif) ? 'Oui':'Non' }}</td>
                    <td>
                        <a href="{{ path('admin_menu_edit', {id: menu.id}) }}" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="{{ path('admin_menu_delete', {id: menu.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ?')">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="11" class="text-center fw-bold">Aucun résultat</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endblock %}
